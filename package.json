{
  "name": "slaerfx",
  "version": "0.0.0",
  "description": "SlaerFX - Engine",
  "main": "dist/slaerfx.js",
  "module": "source/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/slaerjs/slaerfx"
  },
  "scripts": {
    "lint": "eslint -c conf/eslint.json source/**/*.js",
    "prebuild": "npm run lint",
    "build": "rollup source/index.js --format umd --name slaer --output dist/slaerfx.js --sourcemap",
    "postbuild": "npm test",
    "test": "jasmine JASMINE_CONFIG_PATH=conf/jasmine.json",
    "watch": "watch \"npm run build\" source/",

    "start": "npm run watch"
  },
  "keywords": [
    "games",
    "engine",
    "graphics",
    "browser",
    "webgl",
    "canvas"
  ],
  "author": "Gary Doubl√© <garydouble@live.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "7.2.3",
    "eslint": "3.19.0",
    "jasmine": "2.6.0",
    "jsdom": "10.0.0",
    "rollup": "0.41.6",
    "watch": "1.0.2"
  }
}
